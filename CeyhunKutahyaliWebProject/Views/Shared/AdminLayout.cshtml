<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ceyhun Ticaret</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ceyhun Ticaret Admin Paneli", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a style="margin-left:800px;" href="/Home/Index">Çıkış</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <br />
        <br />
        <hr />
        <footer class="border-top footer text-muted">
            <br />
            <hr />
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Ceyhun Ticaret - Tüm Hakları Saklıdır</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        function Ajax(_url, _data, IsRefresh, _tableName = "") {

            $.ajax({
                url: _url,
                dataType: 'json',
                type: 'POST',
                data: _data,
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    var content = "";
                    if (_tableName != "") {
                        $.each(data, function () {
                            content += "<tr>",
                                content += "<td>" + this["id"] + "</td>",
                                content += "<td>" + this["ProductName"] + "</td>",
                                content += "<td>" + this["ProductFeature"] + "</td>",
                                content += "<td>" + this["ProductPicture"] + "</td>",
                                content += "</tr>"
                        });
                        $("#" + _tableName).html(content);
                    }
                },

                complete: function () {
                    if (IsRefresh) {
                        window.location.reload();
                    }
                }
            });

        }
    </script>

</body>
</html>
